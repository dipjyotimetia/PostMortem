{
  "name": "postmortem",
  "displayName": "PostMortem - Postman to Tests",
  "description": "ðŸš€ Generate Mocha/Supertest tests from Postman collections with ease",
  "version": "1.2.6",
  "publisher": "dipjyotimetia",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/dipjyotimetia/PostMortem"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "keywords": [
    "postman",
    "testing",
    "mocha",
    "supertest",
    "api"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "postmortem.generateFromCollection",
        "title": "ðŸ§ª Generate Tests from Postman Collection",
        "category": "PostMortem"
      },
      {
        "command": "postmortem.generateFromFile",
        "title": "âš¡ Generate Tests from Collection File",
        "category": "PostMortem"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "postmortem.generateFromFile",
          "when": "resourceExtname == .json",
          "group": "postmortem"
        }
      ]
    },
    "configuration": {
      "title": "PostMortem",
      "properties": {
        "postmortem.outputDirectory": {
          "type": "string",
          "default": "./tests",
          "description": "Default output directory for generated tests"
        },
        "postmortem.maintainFolderStructure": {
          "type": "boolean",
          "default": true,
          "description": "Maintain Postman collection folder structure"
        },
        "postmortem.generateFullProject": {
          "type": "boolean",
          "default": false,
          "description": "Generate complete test framework with enhanced features"
        },
        "postmortem.createSetupFile": {
          "type": "boolean",
          "default": true,
          "description": "Create setup.ts file for test configuration"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "build": "npm run bundle",
    "compile": "tsc -p ./",
    "bundle": "node esbuild.js",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.34.0",
    "glob": "^10.3.10",
    "mocha": "^11.7.2",
    "sinon": "^21.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@dipjyotimetia/postmortem": "1.2.6",
    "postman-collection": "5.1.0",
    "axios": "^1.11.0",
    "lodash": "^4.17.21",
    "fs-extra": "^11.3.1",
    "chalk": "^5.6.0",
    "dotenv": "^17.2.2"
  }
}