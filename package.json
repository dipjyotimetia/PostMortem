{
  "name": "@dipjyotimetia/postmortem",
  "version": "0.0.6",
  "description": "Convert Postman collections to Mocha/Supertest tests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "postmortem": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:test": "tsc -p tsconfig.test.json",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "npm run build && npm run build:test && mocha",
    "test:watch": "npm test -- --watch",
    "test:coverage": "nyc npm test",
    "lint": "eslint src tests --ext .ts,.js",
    "lint:fix": "eslint src tests --ext .ts,.js --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts' 'src/**/*.js' 'tests/**/*.js'",
    "convert": "npm run build && node dist/cli.js -c ./collection/Platzi_postman_collection.json -o ./test-output",
    "convert:debug": "npm run build && node dist/cli.js -c ./collection/Platzi_postman_collection.json -o ./test-output --debug",
    "prepublishOnly": "npm run build && npm test && npm run lint",
    "dev": "ts-node src/cli.ts"
  },
  "keywords": [
    "postman",
    "mocha",
    "supertest",
    "api",
    "testing",
    "conversion",
    "test-automation",
    "cli"
  ],
  "author": "Dipjyoti Metia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dipjyotimetia/PostMortem"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "dotenv": "^17.2.2",
    "fs-extra": "^11.3.1",
    "lodash": "^4.17.21",
    "postman-collection": "5.1.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.17.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@types/postman-collection": "^3.5.11",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "@types/tmp": "^0.2.6",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "chai": "^6.0.1",
    "eslint": "^9.34.0",
    "mocha": "^11.7.2",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "tmp": "^0.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ]
}
