{
  "name": "postmorterm",
  "version": "1.1.0",
  "description": "Convert Postman collections to Mocha/Supertest tests",
  "main": "src/index.js",
  "bin": {
    "postmorterm": "./src/cli.js"
  },
  "scripts": {
    "test": "mocha tests/**/*.test.js --recursive --timeout 10000",
    "test:watch": "npm test -- --watch",
    "test:coverage": "nyc npm test",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write 'src/**/*.js' 'tests/**/*.js'",
    "convert": "node src/cli.js -c ./collection/Platzi_postman_collection.json -o ./test-output",
    "convert:debug": "node src/cli.js -c ./collection/Platzi_postman_collection.json -o ./test-output --debug",
    "prepublishOnly": "npm test && npm run lint"
  },
  "keywords": [
    "postman",
    "mocha",
    "supertest",
    "api",
    "testing",
    "conversion",
    "test-automation",
    "cli"
  ],
  "author": "Dipjyoti Metia",
  "license": "MIT",
  "dependencies": {
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "lodash": "^4.17.21",
    "postman-collection": "5.0.0",
    "chalk": "^4.1.2",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "chai": "^5.2.0",
    "mocha": "^11.1.0",
    "supertest": "^7.0.0",
    "sinon": "^18.0.1",
    "nyc": "^17.0.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.1",
    "tmp": "^0.2.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ]
}